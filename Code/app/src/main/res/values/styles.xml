<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/beans_light_grey</item>
        <item name="colorPrimaryDark">@color/beans_dark_grey</item>
        <item name="colorAccent">@color/beans_blue</item>
    </style>

    <!-- region Text styles -->
    <style name="TextBase" >
        <item name="android:textColor">@color/beans_dark_grey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitle" parent="@style/TextBase">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeader" parent="@style/TextBase">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubheader" parent="@style/TextBase">
    </style>

    <style name="TextForms" parent="@style/TextBase">
    </style>
    <!-- endregion -->

    <!-- region Input Field styles -->
    <style name="InputField" >
        <item name="android:background">@drawable/background_field_selector</item>
        <item name="android:padding">8dp</item>
    </style>
    <!-- endregion -->

    <!-- region Button styles -->
    <style name="Button" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/login_button_colour</item>
        <item name="android:textColor">@color/beans_white</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">0dp</item>
    </style>
    <!-- endregion -->

</resources>
